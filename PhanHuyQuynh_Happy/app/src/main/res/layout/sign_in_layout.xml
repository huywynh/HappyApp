<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="58dp"
        android:layout_height="62dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gr4" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gr5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="77dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gr6" />

    <EditText
        android:id="@+id/signin_edtEmail"
        android:layout_width="339dp"
        android:layout_height="59dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/signin_edtPassword"
        android:layout_width="339dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/signin_edtEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signin_edtEmail"
        app:layout_constraintTop_toBottomOf="@+id/signin_edtEmail" />

    <Button
        android:id="@+id/signin_btnSignin"
        android:layout_width="242dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/shapebtn"
        android:text="Sign in"
        app:backgroundTint="#9C27B0"
        app:layout_constraintEnd_toEndOf="@+id/signin_edtPassword"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/signin_edtPassword"
        app:layout_constraintTop_toBottomOf="@+id/signin_edtPassword" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="238dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Forgot password?"
        app:layout_constraintEnd_toEndOf="@+id/signin_btnSignin"
        app:layout_constraintStart_toStartOf="@+id/signin_btnSignin"
        app:layout_constraintTop_toBottomOf="@+id/signin_btnSignin" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="236dp"
        android:layout_height="28dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="SIGN IN WITH GOOGLE"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>